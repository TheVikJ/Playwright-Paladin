{
  "name": "Playwright Paladin",
  "description": "Helpful tools for all writers",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
