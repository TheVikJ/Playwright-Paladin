{
  "name": "Playwright Paladin",
  "description": "Helpful tools for all writers",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "background.js",
        "hot-reload.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
