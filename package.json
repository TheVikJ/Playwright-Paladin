{
  "name": "playwright-paladin",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "copyfiles": "^2.4.1",
    "parcel": "^2.0.0-rc.0",
    "postcss": "^8.4.5",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.15"
  },
  "dependencies": {
    "crx-hotreload": "^1.0.6"
  },
  "scripts": {
    "prebuild": "rimraf dist .cache .parcel-cache",
    "build:tailwind": "tailwindcss build src/style.css -c ./tailwind.config.js -o dist/style.css",
    "watch": "yarn build:tailwind && copyfiles -f src/manifest.json dist && parcel watch --no-hmr src/{*.js,*.html}",
    "build": "yarn build:tailwind && copyfiles -f src/manifest.json dist && parcel build src/{*.js,*.html}"
  }
}
